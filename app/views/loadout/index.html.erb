    <div class="container">
        <div class="equipment_selector">
            <div id="catagory_wrapper" data-step="1"></div>

            <!-- item slide -->
            <div class="slide_wrapper">
                <div class="item_header_wrapper">
                    <a href="#" target="_blank" class="item_view_link"><h1 id="item_header"></h1></a>
                </div>

