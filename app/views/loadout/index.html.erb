                <div class="images_wrapper">
                    <div class="large_image_wrapper">
                        <a class="item_view_link" href="#" target="_blank"><img id="main_image" src="#" alt="big image"></a>
                    </div>

                    <div id="thumbnails_wrapper"></div>
                </div>

                <div class="item_stats_wrapper">
                    <h3>Stats</h3>
                    <p>weight: <span id="item_weight"></span> oz.</p>
                    <p>price: <span id="item_price"></span></p>
                    <p>description: <p id="item_description"></p></p>
                </div>

                <div class="arrow right" name='right'><span>></span></div>

                <div class="equip_wrapper" data-step="3">
                    <span>equip item</span>
                    <input type="checkbox" id="equip_item_checkbox" value="#">
